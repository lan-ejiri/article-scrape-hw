<div class="row">
    <div class="col-xs-4"></div>
    <div class="col-xs-4">
        <div class="text-center titlething">
            <h1>All Articles</h1>
        </div>
    </div>
    <div class="col-xs-4"></div>
</div>

<div class="row">{{#each article}}
    <div class="singlearticle">
        <h3>{{this.title}}</h3>
        {{!--
        <h1>{{this.id}}</h1> --}}
        <p>{{this.summary}}</p>
        <a href="{{this.link}}">Click here to read more on Kotaku.</a>

        <a class="rightside" href="/articles/{{this.id}}">
            <button>
                COMMENTS
            </button>
        </a>

        <a class="rightside" href="/favorites/{{this.id}}">
            <button>Add this article to Favorites</button>
        </a>

    </div>
    {{/each}}</div>